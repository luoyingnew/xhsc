body{
	background: #eeeeee;
}
.carlist,.gdlist{
	width: 100%;
	padding:2% 0;
	background: #fff;
}
.topopt{
	height: 60px;
	line-height: 60px;
	padding: 0 3%;
	border-bottom:1px solid #dcdcdc;
}
.checkout{
	float: left;
	width: 5%;
	padding-top:6%;
}
.optleft{
	width: 60%;
	float: left;
	padding-left:15px;
}
.optleft span{
	padding-left: 1.2rem;
	font-size: 1.5rem;
}
.optright{
	float: right;
	font-size: 1.2rem;
	color: #31B0D5;
}
.gdlist{
	width: 100%;
	padding:5% 3%;
	border-bottom:1px solid #dcdcdc;
	overflow: hidden;
}
.gdlist img.checkout{
	padding-top: 40px;
}
.gdlist .dbimg{
	width:24%;
	float: left;
	margin-left:20px;
}
.gdlist .det{
	width: 64%;
	float: left;
	padding-left:3%;
	font-size: 1.2rem;
}
.gdlist .det h5{
	float: left;
	width: 70%;
	font-size: 1.3rem;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	font-weight: 700;
	margin: 5% 0;
	margin-top:8%;
	
}
.gdlist .det .tj{
	float: right;
	font-size: 1.2rem;
	color: #ff6597;
	/* padding: 4% 0; */
	margin-top:6%;
}
.gdlist .det p{
	clear: both;
	font-size: 1.2rem;
	margin-bottom: 1%;
}
.gdlist .det p:last-child{
	margin-bottom: 0;
}
.gdlist .det p span.price,.gdlist .det p sm{
	color: #ff6597;
}
.gdlist .det p span.num{
	float: right;
	display:inline-block;
}

.bottom{
	position: fixed;
	bottom: 0;
	background: #fff;
	height: 45px;
	padding:0 0 0 3%;
	width: 100%;
}
.bottom img.checkout{
	padding-top: 23%;
	width: 25%;
}
.bottom .btleft{
	float: left;
	width: 20%;
	line-height: 50px;
	font-size: 1.5rem;
}
.bottom .btright{
	float: right;
	width:60%;
	text-align: right;
}
.bottom .btright p{
	font-size: 1.2rem;
	width: 50%;
	float: left;
	color: #ff6597;
	margin: 0;
	padding-top: 4%;
	text-align: left;
}
.bottom .btright p span:last-child{
	color: #000;
}
.bottom .btright button{
	width: 40%;
	background:  #ff6597;
	color: #fff;
	height: 45px;
	line-height: 45px;
	border:0;
	font-size: 1.5rem;
}
/*璐墿杞︾紪杈�*/
.optnum{
	clear: both;
	width: 100%;
	margin: 5% 0;
    height: 30px;
    display: none;
}
.optnum input{
	width: 30px;
	height: 23px;
	border: 1px solid #eee;
	float: left;
	font-size: 1.2rem;
	text-align: center;
}
.optnum .optnumdec,.optnumadd{
	float: left;
    width: 23px;
    height: 23px;
    font-size: 2rem;
    background: #eee;
    line-height: 23px;
    text-align: center;
}
.btright .delete{
	display: none;
}

.iconp{
			width: 200px;
			height: 200px;
			background:#f8bfbf;
			text-align: center;
			border-radius: 50%;
			margin: 100px auto;
			margin-top: 200px;
		}
		.iconp img{
			width: 100px;
			height: 100px;
			margin-top: 50px;
		}
		.box p{
			width: 100%;
			text-align: center;
			margin: 5% 0;
			color: #666;
			font-size:2.5rem;
		}
		.box p.goindex a{
			color:#f8bfbf;
		}
