*{
	margin: 0;
	padding: 0;
}
header{
	height: 70px;
	width: 100%;
	margin-bottom:20px;
}


div.logo{
	width: 20%;
    height: 40px;
    float: left;
    margin: 30px 20px;
    margin-bottom: 0;
}
div.logo img{
	max-width: 100%;
	height: auto;
	display: block;
}
div.gzhu{
	float: right;
	width: 18%;
	height: 40px;
	border:1px solid #000000!important;
	border-radius: 3px;
	line-height: 40px;
	font-size: 1.5rem;
	text-align: center;
	margin: 30px 20px;
	margin-bottom: 0;
	}
.imgw200{
	width:200px;
}
a{
	color:#000000 ;
	text-decoration: none;
}
a:hover{
	color:#000000 ;
	text-decoration: none;
}
nav{
	height: 60px;
	width: 100%;
}
nav li{
	float: left;
	width: 20%;
	list-style: none;
	text-align: center;
	font-size: 1.5rem;
	height: 60px;
	line-height: 60px;
}

.adtitle{
	height: 70px;
	text-align: center;
}
.adtitle h3{
	font-size: 2rem;
	letter-spacing: 0.5rem;
    color: #e8537e;
}
.adtitle hr{
	margin: 3% auto;
	width: 10%;
	border-color: #000;
}
.adtitle p{
	font-size: 1.3rem;
	letter-spacing: 0.3rem;
}

footer{
	border-top: #F1F1F1 solid 1px;
	position: fixed;
	bottom: 0;
	width: 100%;
	background: #fff;
	z-index: 2;
}
footer li{
	width: 25%;
	float: left;
	list-style: none;
	text-align: center;
	padding: 2% 0;
}
footer li a:active{
	text-decoration: none;
	color: #fc8eae;
}
footer li a.selted{
	color: #fc8eae;
}
footer li a{
	font-size: 1rem;
	text-decoration: none;
	color: #666666;
}

footer li i{
	display: block;
}
@font-face {
  font-family: 'iconfont';
  src: url('../../fonts/iconfont.eot');
  src: url('../../fonts/iconfont.eot?#iefix') format('embedded-opentype'),
      url('../../fonts/iconfont.woff2') format('woff2'),
      url('../../fonts/iconfont.woff') format('woff'),
      url('../../fonts/iconfont.ttf') format('truetype'),
      url('../../fonts/iconfont.svg#iconfont') format('svg');
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 2rem;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}


nav li:hover{
	border-bottom:2px solid #000;
}
/*商品购买页轮播图限制高度*/
.slideBox .bd li img{
	height: 375px;
}
.slideBox .hd li {
	background: #fff;
}
.slideBox .hd li.on {
	background: #ff557b;
}


.tips{
				width: 100%;
				height: 100%;
				background:#000000a1;
				z-index: 5;
				position: absolute;
				top: 0;
				left: 0;
				display: none;
			}
			.notices{
				width: 80%;
				height: 100px;
				background: #f8bfbf;
				color: #FFFFFF;
				text-align: center;
				line-height: 100px;
				position: absolute;
				top: 30%;
				left: 10%;
				font-size: 1.5rem;
			}