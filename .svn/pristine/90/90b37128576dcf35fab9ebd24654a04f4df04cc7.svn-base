*,p{
	margin:0;
	padding:0;
}
a{
	color: #000;
	text-decoration: none;
}
.top{
	width: 100%;
	padding: 2% 3%;
	overflow: hidden;
	background: url(../images/fg.png) repeat-x 0 bottom;
	background-size: 11%;
	width: 100%;
}
.tbbox{
	
	width:100%;
	margin: 0 auto;
}
.tbbox li{
	float: left;
	list-style: none;
	width: 50%;
	height: 40px;
	text-align: center;
	color: #FE5479;
	font-size: 1.5rem;
	line-height: 40px;
	border:#FE5479 solid 1px;
}
.tbbox li.psway{
	border-top-left-radius:3px;
	border-bottom-left-radius: 3px;
}
.tbbox li.ztway{
	border-top-right-radius:3px;
	border-bottom-right-radius: 3px;
	background: #fff;
	color: #FE5479;
}
.tbbox li img{
	width: 11%;
	padding-right: 2%;
}
.tbbox li.select{
	color:  #fff;
	background:#FE5479;
}
.tbcont{
	clear: both;
	padding: 3% 0;
	overflow: hidden;
}
.box img{
	padding-right: 3%;
	width: 10%;
}
.box{
	font-size: 1.3rem;
}
.box span{
	width: 30%;
	float: left;
	font-size:1.3rem;
    color: #3c3c3c;
}
.box m{
	float: right;
	color: #999;
}
.box p{
	margin: 0;
	height: 40px;
	line-height: 40px;
	clear: both;
	padding: 2% 0;
}
.box p a{
	float: right;
	width: 30%;
    text-align: left;
    color: #999;
    display: inline-block;
}


.one{
	padding: 2% 3%;
	position: relative;
}
.one p{
	padding: 0 2% 0 7%;
	font-size: 1.5rem;
    width: 100%;
    overflow: hidden;
    text-overflow:ellipsis;
	white-space: nowrap;
}
.one p span{
	float: none;
}
.one p .shpname{
	font-size: 1.5rem;
	float: none;
	width: 50%;
}
.one p .shptel{
	font-size: 1.5rem;
	float: right;
	width: 50%;
	text-align: right;
}
.one p:nth-child(1){
	background: url(../images/dw.png) no-repeat 0 center;
	background-size: 6%;
}
.one m{
	position: absolute;
	right: 0;
	top: 45%;
}
.one p:nth-child(2),.one p:nth-child(2) span{
	font-size: 1.3rem;
	color: #999;
}
div.hr{
	background: url(../images/fg.png) repeat-x;
	width: 100%;
}
/*订单商品信息*/
.gdinfo{
	padding: 2% 3%;
}
.gdinfo p.sc{
	background: url(../images/index.png) no-repeat;
	padding:0 0 2% 10%;
	font-size: 1.5rem;
	height: 30px;
	line-height: 30px;
}

.gdlist{
	width: 100%;
	padding:3%;
	border-bottom:1px solid #f4f4f4;
	overflow: hidden;
}
.gdlist .dbimg{
	width:24%;
	float: left;
}
.gdlist .det{
	width:75%;
	float: left;
	padding-left:3%;
	font-size: 1.2rem;
}
.gdlist .det h5{
	float: left;
	width: 100%;
	font-size: 1.3rem;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	font-weight: 700;
	margin: 2% 0;
	
}
.gdlist .det p{
	clear: both;
	font-size: 1.2rem;
	margin-bottom: 1%;
}
.gdlist .det p:last-child{
	margin-bottom: 0;
}
.gdlist .det p span.price,.gdlist .det p sm{
	color: #ff6597;
}
.gdlist .det p span.num{
	float: right;
	display:inline-block;
}
.ptm{
	width: 100%;
	padding: 3%;
	height: 40px;
	line-height: 40px;
	font-size: 1.3rem;
}
.ptm span{
	float: right;
}
.ptm input{
	border: 0;
	width: 75%;
	margin-left: 5%;
}
.spje,.yf{
	width: 100%;
	padding: 3%;
	height: 30px;
	line-height: 30px;
	font-size: 1.2rem;
}
.spje span,.yf span{
	float: right;
}
.hj{
	width: 100%;
	padding: 3%;
	height: 40px;
	line-height: 40px;
	text-align: right;
	margin-bottom: 60px;
	font-size: 1.3rem;
}
.hj b,.bottom p b{
	color: #fd5579;
}
.bottom{
	clear: both;
	position: fixed;
	bottom: 0;
	height: 45px;
	line-height: 45px;
	width: 100%;
	background: #fff;
	font-size: 1.5rem;
}
.bottom p{
	float: left;
	width: 75%;
	text-align: right;
	padding-right: 5%;
}
.bottom button{
	width: 25%;
	height: 45px;
	border:0;
	text-align: center;
	color: #fff;
	background:#fd5579 ;
	font-size: 1.5rem;
	line-height: 45px;
	float: right;
}


/*拼团流程*/
.pttop{
	border-bottom: 1px solid #f4f4f4;
}
.pttop div{
	width: 33%;
	float: left;
	overflow: hidden;
	padding: 5% 0;
	text-align: center;
	font-size: 0.8rem;
	background: url(../images/zhankai.png) no-repeat right 40%;
}
.pttop div:nth-child(3){
	background: none;
}
.pttop img{
	width:30%;
	height: auto;
	display: block;
	margin: 0 auto;
}
.pttop div p{
	margin-top: 5%;
}
