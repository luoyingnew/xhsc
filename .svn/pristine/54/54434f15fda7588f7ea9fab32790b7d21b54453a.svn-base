.itemlist{
	width: 100%;
	padding: 0 3%;
	overflow: hidden;
	margin:20px 0 60px 0;
}
.itemlist li a{
	display: block;
}
.itemlist li{
	float: left;
	width: 49%;
	overflow: hidden;
	margin-bottom:5%;
}
.itemlist li img{
	width: 100%;
	height: 180px;
}
.itemlist li:nth-child(odd){
	margin-right: 2%;
}
.itemlist li p{
	margin:5% 0;
	font-size: 1.5rem;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.itemlist li a p:nth-child(2){
	color: #e8537e;
}
.itbotom p.itprice{
	font-size: 1.5rem;
    margin: 2% 0 0 0;
    float: left;
    width: 60%;
    height: 23px;
}
.itbotom .flwbuy {
    float: right;
    width: 30%;
    margin: 0 auto;
    text-align: right;
    height: 23px;
}
.itbotom .flwbuy img {
    width: 31.26px;
    height: 23px;
    display: inline-block;
}