*{
	margin:0;
	padding:0;
}

.back{
	display:none;
	position: absolute;
	left: 0;
	top:150px;
	width: 100%;
	height:100%;
	background: rgb(255, 255, 255);
    z-index: 2;
    overflow-x: auto;
	overflow-y: scroll;
}
.overfl{
	 height:600px; 
	overflow-x: auto;
	overflow-y: scroll;
}
.back #div2{
	display:none;
}

#close{
	padding: 2px 6px;
    position: absolute;
    top: 3px;
    right: 5px;
    z-index:2;
	
}
#close img{
	width:25px;
} 
#close-button {
	float: right;
	font-size: 30px;
}

.gdinfo,.selectarg{
	width:97%;
	overflow: hidden;
	padding:3% 3% 3% 0;
	margin-left: 3%;
	border-bottom:1px solid #dadada ;
}
.gdinfo img{
	width: 30%;
	display:inline-block;
	float: left;
	margin-bottom: 3%;
}
.gdinfo .gdname{
	width: 60%;
	float: left;
	padding: 0 2%;
	font-size: 1.5rem;
}
.gdinfo .gdname h5{
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	width: 100%;
}
.gdinfo .gdname p{
	color: #fe5479;
}



