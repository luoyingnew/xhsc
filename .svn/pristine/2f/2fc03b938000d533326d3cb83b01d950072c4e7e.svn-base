.sys_spec_text {}

.sys_spec_text li {
	float: left;
	margin:0 5% 2% 0;
	outline: none;
	list-style: none;
}

.sys_spec_text li a {
	padding: 5px;
	border: 1px solid #ADADAD;
	background: #fff;
	border-radius: 3px;
	display: inline-block;
	color: #000;
	white-space: nowrap;
}


.sys_spec_text li.selected a {
	border-color:#fe5479 ;
	background: #fe5479;
	color: #fff;
	text-decoration: none;
}
