/*拼团告示*/
.ptadv{
	width: 100%;
	height: 40px;
	line-height: 40px;
	padding: 0 3%;
	background: #ff699c;
	color: #fff;
}
.ptadv p{
	width: 20%;
	float: left;
	font-size: 1.5rem;
}
.ptadv .tmer{
	width:60%;
	float: right;
	font-size: 1.3rem;
}
/*单品购买下单流程样式order1*/
.slideBox {
	position: relative;
	overflow: hidden;
	margin:0 auto;
	max-width: 560px;
	/* 设置焦点图最大宽度 */
}

.slideBox .hd {
	position: absolute;
	height: 28px;
	line-height: 28px;
	bottom: 0;
	right:40%;
	z-index: 1;
}

.slideBox .hd li {
	display: inline-block;
	width: 5px;
	height: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	background: #333;
	text-indent: -9999px;
	overflow: hidden;
	margin: 0 6px;
}

.slideBox .hd li.on {
	background: #fff;
}

.slideBox .bd {
	position: relative;
	z-index: 0;
}

.slideBox .bd li {
	position: relative;
	text-align: center;
}

.slideBox .bd li img {
	vertical-align: top;
	width: 100%;
	height: 414px;
	/* 图片宽度100%，达到自适应效果 */
}

.slideBox .bd li a {
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}


/* 去掉链接触摸高亮 */

.slideBox .bd li .tit {
	display: block;
	width: 100%;
	position: absolute;
	bottom: 0;
	text-indent: 10px;
	height: 28px;
	line-height: 28px;
	background: url(images/focusBg.png) repeat-x;
	color: #fff;
	text-align: left;
}

/*内容信息*/
section{
	font-size: 1.3rem;
	padding: 3%;
	margin-bottom: 60px;
	clear: both;
}
h5{
	font-size: 1.5rem;
	font-weight: 600;
}
p.yfnum{
	color:rgb(130, 126, 126);
}
p.yfnum span:nth-child(1){
	margin-right: 20%;
}
p.price{
